/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: SAMPLESHEET_CHECK {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: FASTQC_BEFORE {
        ext.args = '--quiet'
        ext.suffix = 'before'
        publishDir = [
            path: { "${params.outdir}/fastqc_before/${meta.id}" }
        ]
    }

    withName: FASTQC_AFTER {
        ext.args = '--quiet'
        ext.suffix = 'after'
        publishDir = [
            path: { "${params.outdir}/fastqc_after/${meta.id}" }
        ]
    }

    withName: FASTP {
        publishDir = [
            path: { "${params.outdir}/fastp/${meta.id}" },
            enabled: false
        ]
        ext.args = params.deduplicate ? '--include_unmerged --dedup' : '--include_unmerged'

    }
    withName: BOWTIE2_BUILD {
        publishDir = [ enabled: false]
    }
    withName: BOWTIE2_ALIGN {
        ext.args = "--very-sensitive -N 1"
        ext.merged = params.save_merged
    }

    withName: SAMTOOLS_SORT {
        publishDir = [
            path: { "${params.outdir}/alignment/${meta.genome_name}/${meta.id}"}
        ]
    }

    withName: PICARD_MARKDUPLICATES {
        publishDir = [
            path: { "${params.outdir}/picard_markduplicates/${meta.id}"}
        ]
        ext.prefix = { "${meta.id}_${meta.taxid}" }
        ext.args = "--REMOVE_DUPLICATES TRUE --VALIDATION_STRINGENCY SILENT"
        clusterOptions = { "-S /bin/bash -V -l h_vmem=${(task.memory.toGiga() * 2)}G" }
    }

    withName: PRESEQ_LCEXTRAP {
        publishDir = [
            path: { "${params.outdir}/preseq_lcextrap/${meta.id}"}
        ]
        ext.prefix = { "${meta.id}_${meta.taxid}" }
        clusterOptions = { "-S /bin/bash -V -l h_vmem=${(task.memory.toGiga() * 2)}G" }
    }

    withName: QUALIMAP_BAMQC {
        publishDir = [
            path: { "${params.outdir}/qualimap/${meta.genome_name}/${meta.id}"}
        ]
        clusterOptions = { "-S /bin/bash -V -l h_vmem=${(task.memory.toGiga() * 2)}G" }
    }



    withName: DAMAGEPROFILER {
        publishDir = [
            path: { "${params.outdir}/damageprofiler/${meta.genome_name}/${meta.id}"}
        ]
        clusterOptions = { "-S /bin/bash -V -l h_vmem=${(task.memory.toGiga() * 2)}G" }
    }

    withName: FREEBAYES {
        publishDir = [
            path: { "${params.outdir}/freebayes/${meta.genome_name}/${meta.id}"}
        ]
    }

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }

    withName: SAM2LCA {
        ext.args  = "-a ${params.sam2lca_acc2tax}"
        ext.args2 = params.sam2lca_split ? "-r ${params.sam2lca_split_rank}" : ""
        ext.args3 = params.sam2lca_identity ? "-i ${params.sam2lca_identity}" : ""
    }

}
